@model List<Exercice6.Models.Student>

@{
    ViewData["Title"] = "Liste des étudiants";
}

<h1>Liste des étudiants</h1>

<p>
    <a asp-action="Create">Ajouter un étudiant</a>
</p>

<table>
    <thead>
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Âge</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Student student in Model)
        {
            <tr>
                <td>@student.Firstname</td>
                <td>@student.Lastname</td>
                <td>@student.Age</td>
                <td>@student.Email</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <p>Aucun étudiant pour le moment.</p>
}