using System;
using Exercice4.Models;
using Microsoft.AspNetCore.Mvc;

@model Product

@{
    ViewBag.Title = "Détails du produit";
}

<h2>Détails du produit</h2>

@if (Model == null)
{
    <p>Produit introuvable.</p>
}
else
{
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.Id</dd>

        <dt>Nom</dt>
        <dd>@Model.Name</dd>

        <dt>Catégorie</dt>
        <dd>@Model.Category</dd>

        <dt>Prix</dt>
        <dd>@Model.Price.ToString("F2") €</dd>
    </dl>

    <p>
        <a href="@Url.Action("Index")" class="btn btn-primary">Retour à la liste</a>
    </p>
}